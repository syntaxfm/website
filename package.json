{
  "name": "syntax",
  "version": "3.0.0",
  "private": true,
  "scripts": {
    "dev": "vite dev",
    "preheat": "node ./scripts/preheat.js --env-only",
    "vite-dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "test": "svelte-kit sync && playwright test",
    "test:ui": "svelte-kit sync && playwright test --ui",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test:unit": "svelte-kit sync && vitest",
    "eslint": "eslint .",
    "lint": "prettier --plugin-search-dir . --check . && eslint . && pnpm stylelint",
    "format": "prettier --plugin-search-dir . --write .",
    "site:update": "pnpm update -i -L",
    "db:start": "docker compose up",
    "db:studio": "drizzle-kit studio",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:migrate": "drizzle-kit migrate",
    "db:migrate:direct": "node scripts/direct-db-migration.js",
    "db:pg:studio": "drizzle-kit studio --config drizzle-pg.config.ts",
    "db:pg:generate": "drizzle-kit generate --config drizzle-pg.config.ts",
    "db:pg:push": "drizzle-kit push --config drizzle.config.ts",
    "db:pg:migrate": "drizzle-kit migrate --config drizzle.config.ts",
    "db:pg:verify": "node scripts/verify-pg-schema.js",
    "i-changed-the-schema": "pnpm run db:push",
    "postinstall": "pnpm exec playwright install",
    "stylelint": "NODE_OPTIONS=--no-deprecation stylelint \"**/*.{css,svelte}\"",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
