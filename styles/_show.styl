.show
  border-right 1px solid grey
  border-bottom 1px solid grey
  border-left 10px solid grey
  background lightgrey
  position relative
  display flex
  @media (max-width: 650px)
    flex 1 0 auto
  a
    flex 1 1 auto
    padding 10px
  &__playcontrols
    display flex
    align-items center
    justify-content center
    width 5rem
    flex-shrink 0
    padding 1rem
    button
      background none
      border 0
      outline-color yellow
      &:hover
        color yellow
  &--dummy
    flex 1 0 auto
  &--active
    border-right-color white
    background white
    border-left 0
    padding-left 1rem
    &:before
      display block
      background grad
      width 10px
      height 100%
      content ''
      position absolute
      top 0
      left 0
  &__displayNumber
    text-transform uppercase
    margin 0
    color gray3
    font-size 11px
  &__title
    color black
    font-size 1.5rem
    margin 0
  &__date
    margin-top 0
    text-align right
    color gray3
    font-size 1.2rem

.show-wrap
  background white
  display flex
  flex-wrap wrap

.searchBox
  position relative
  &.sticky
    position: sticky
    position -webkit-sticky
    z-index: 1
    top: 102px
    @media (max-width: 650px)
      top: 0px
  input
    width 100%
    height 3rem
    padding 1rem
    border 1px solid grey
    border-left-width 10px
    background lightgrey
    font-size 1.5rem
    outline-color yellow
  .search-icon-wpr
    position absolute
    right 3rem
    padding-top 0.5rem
    .search-icon
      color #000
      position absolute
      margin-top 2px
      margin-left 3px
      width 12px
      height 12px
      border solid 1px currentColor
      border-radius 100%
      -webkit-transform rotate(-45deg)
      transform rotate(-45deg)
      &:before
        content ''
        position absolute
        top 11px
        left 5px
        height 6px
        width 1px
        background-color currentColor
        
.column-wrap
  width 38%
  display flex
  flex-direction column
  @media (max-width: 650px)
    height 300px
    width 100%
    overflow-x scroll
  .no-results
    font-size 1.5rem
    text-align center
    &.hidden
      display none

.showNotes
  padding 2rem
  width 62%
  font-size 1.5rem
  @media (max-width: 650px)
    width 100%
  .button
    border-bottom 0
  ul
    padding-left 2rem
    list-style-type circle
  li
    margin 10px 0
  h1,h2,h3,h4,h5,h6
    font-family 'courier'
    font-weight 100
    border-bottom 1px solid grey
    padding-bottom 1rem
    &:before
      padding-right 1rem
  pre
    background lightgrey
    padding 1rem
  h1,h2
    font-size 2.5rem
  a
    color lighten(black, 20%)
    border-bottom 1px solid yellow
    text-decoration none
  mark
    background yellow
    