.bars
  height 30px
  width 40px

.bar
	height 3px
  width 3px
  position absolute
  bottom 1px
  background green
  animation sound 0ms -800ms linear infinite alternate

.bar:nth-child(1)
  left 1px
  animation-duration 474ms

.bar:nth-child(2)
  left 5px
  animation-duration 433ms

.bar:nth-child(3)
  left 9px
  animation-duration 407ms

.bar:nth-child(4)
  left 13px
  animation-duration 458ms

.bar:nth-child(5)
  left 17px
  animation-duration 400ms

.bar:nth-child(6)
  left 21px
  animation-duration 427ms

.bar:nth-child(7)
  left 25px
  animation-duration 441ms

.bar:nth-child(8)
  left 29px
  animation-duration 419ms

.bar:nth-child(9)
  left 33px
  animation-duration 487ms

.bar:nth-child(10)
  left 37px
  animation-duration 442ms

.bars--paused
	& > *
		animation-play-state paused

@keyframes sound
  0%
    height 3px
    background yellow
    opacity .35
  100%
    height 28px
    background darken(yellow, 20%)
    opacity 1
