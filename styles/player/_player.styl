.player
  bottom 0
  width 100%
  background black
  border-top 1px solid yellow
  color white
  display flex
  flex-wrap wrap

  &__section
    order 2

    &--left
      width 100px
      min-width 80px
      @media (max-width: 650px)
        flex 1

      & > *
        width 100%

    &--middle
      flex 1 1 auto
      border-right 1px solid rgba(0,0,0,0.6)
      display flex
      flex-direction column
      @media (max-width: 650px)
        order 1
        width 100%

    &--right
      display flex
      @media (max-width: 650px)
        flex 2

      & > *
        width 100%

  &__icon
    font-size 2rem
    line-height 0.5

  &__title
    font-size 1.5rem
    margin 0
    flex 1 0 auto
    display flex
    align-items center
    padding-left 2rem
    @media (max-width: 650px)
      padding 1rem

  button
    background black
    border 0
    color white
    padding 1rem
    border-right 1px solid rgba(0,0,0,0.6)

  &__speeddisplay
    height 2.5rem
    display flex
    justify-content center
    align-items center

  &__speed
    flex 0 1 auto
    padding 1rem
    display flex
    flex-wrap wrap
    justify-content space-around
    flex-direction column
    align-items center

    & > *
      width 100%
      margin 0

    &__display
      height 2.5rem

  &__inputs
    font-size 0

  &__volume
    width 120px
    text-align center
    display flex
    flex-direction column
    justify-content space-around
    align-items center
    padding 1rem
    flex-wrap wrap
    flex 1 0 auto

    &:hover
      label
        border-top 1px solid yellow

    input
      display none

    label
      border-top 1px solid green

      &:hover
        & ~ label
          border-top 1px solid black

    p
      width 100%
      margin 0

    input ~ label
      background green
      border-right 2px solid black
      display inline-block
      font-size 0
      width 8px
      height 2.5rem

    input:checked ~ label
      background grey

    input:checked + label
      background green
