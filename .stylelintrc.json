{
	"extends": ["stylelint-config-standard"],
	"overrides": [
		{
			"customSyntax": "postcss-html",
			"files": ["**/*.svelte"],
			"rules": {
				"csstools/value-no-unknown-custom-properties": [
					true,
					{
						"ignoreLocallyDefined": true,
						"importFrom": [
							"src/styles/bass.css",
							"src/styles/buttons.css",
							"src/styles/layout.css",
							"src/styles/reset.css",
							"src/styles/theme.css",
							"src/styles/typography.css",
							"src/styles/utilities.css",
							"src/styles/variables.css"
						]
					}
				]
			}
		}
	],
	"plugins": [
		"stylelint-declaration-strict-value",
		"stylelint-media-use-custom-media",
		"stylelint-no-undefined-classes",
		"stylelint-value-no-unknown-custom-properties"
	],
	"rules": {
		"alpha-value-notation": "number",
		"csstools/media-use-custom-media": "always",
		"csstools/value-no-unknown-custom-properties": [
			true,
			{
				"ignoreProperties": ["--ideal-font-size", "--max-font-size"],
				"importFrom": [
					"src/styles/bass.css",
					"src/styles/buttons.css",
					"src/styles/layout.css",
					"src/styles/reset.css",
					"src/styles/theme.css",
					"src/styles/typography.css",
					"src/styles/utilities.css",
					"src/styles/variables.css"
				]
			}
		],
		"font-family-no-missing-generic-family-keyword": null,
		"import-notation": "string",
		"plugin/no-undefined-classes": [
			true,
			{
				"cssFiles": ["**/*.css"],
				"htmlFiles": ["**/*.html", "**/*.svelte"],
				"ignoreClasses": ["sr-only", "visually-hidden", "/^js-/"]
			}
		],
		"scale-unlimited/declaration-strict-value": [
			["/color$/", "font-size"],
			{
				"disableFix": true,
				"expandShorthand": true,
				"ignoreValues": ["inherit", "unset", "initial", "transparent"]
			}
		],
		"selector-pseudo-class-no-unknown": [
			true,
			{
				"ignorePseudoClasses": ["global"]
			}
		]
	}
}
